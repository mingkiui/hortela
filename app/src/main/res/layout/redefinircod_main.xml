<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="#EFEFD4">

        <!-- Botão de Fechar -->

        <!-- Título -->

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="27dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Fechar"
            android:src="@drawable/ic_close"
            app:tint="#385637" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Redefinir senha:"
            android:textColor="#385637"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />

        <!-- Subtítulo -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Código de confirmação:"
            android:textColor="#385637"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@id/tvTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <!-- Campo de Código de Confirmação -->
        <LinearLayout
            android:id="@+id/codeInputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSubtitle"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etDigit1"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:background="@drawable/code_input_background"
                android:gravity="center"
                android:textColor="#385637"
                android:textSize="18sp"
                android:inputType="number"
                android:maxLength="1"
                android:padding="10dp"
                android:layout_margin="4dp" />

            <EditText
                android:id="@+id/etDigit2"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:background="@drawable/code_input_background"
                android:gravity="center"
                android:textColor="#385637"
                android:textSize="18sp"
                android:inputType="number"
                android:maxLength="1"
                android:padding="10dp"
                android:layout_margin="4dp" />

            <EditText
                android:id="@+id/etDigit3"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:background="@drawable/code_input_background"
                android:gravity="center"
                android:textColor="#385637"
                android:textSize="18sp"
                android:inputType="number"
                android:maxLength="1"
                android:padding="10dp"
                android:layout_margin="4dp" />

            <EditText
                android:id="@+id/etDigit4"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:background="@drawable/code_input_background"
                android:gravity="center"
                android:textColor="#385637"
                android:textSize="18sp"
                android:inputType="number"
                android:maxLength="1"
                android:padding="10dp"
                android:layout_margin="4dp" />

        </LinearLayout>

        <!-- Texto de Envio de Código -->
        <TextView
            android:id="@+id/tvCodeSent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*Foi enviado um código de confirmação para o email ******@gmail.com"
            android:textColor="#385637"
            android:textSize="14sp"
            android:layout_below="@id/codeInputContainer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <!-- Botão Reenviar Código -->
        <Button
            android:id="@+id/btnResendCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reenviar código"
            android:textColor="#FFFFFF"
            android:backgroundTint="#385637"
            android:layout_below="@id/tvCodeSent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <!-- Botão Redefinir Senha -->
        <Button
            android:id="@+id/btnResetPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Redefinir Senha"
            android:textColor="#FFFFFF"
            android:backgroundTint="#385637"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
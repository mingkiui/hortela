<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E9E6D5"
        android:padding="16dp">

        <!-- Ícone de fechar -->
        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_close"
            android:contentDescription="Fechar"
            android:padding="8dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

        <!-- Ícone de perfil -->
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/btnClose"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_user"
            android:contentDescription="Profile image" />

        <!-- Nome de Usuário -->
        <TextView
            android:id="@+id/nameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileImage"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:text="Nome de usuário:"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nameValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameLabel"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- E-mail -->
        <TextView
            android:id="@+id/emailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameValue"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="E-Mail:"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emailValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailLabel"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- Senha -->
        <TextView
            android:id="@+id/passwordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailValue"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="Senha:"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/passwordValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/passwordLabel"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:text="***"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <Button
            android:id="@+id/personalInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/passwordValue"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:text="Informações Pessoais"
            android:backgroundTint="#3D5532"
            android:textColor="@color/white" />

        <!-- Botão Editar Perfil -->
        <Button
            android:id="@+id/editExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/personalInformation"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:text="Sair"
            android:backgroundTint="#3D5532"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/editdrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editExit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:backgroundTint="#801F18"
            android:text="Apagar conta"
            android:textColor="@color/white" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
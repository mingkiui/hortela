<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="#E9E6D5">

        <!-- Botão de Fechar (X) -->
        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_close"
            android:contentDescription="Fechar"
            android:padding="8dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

        <!-- Título de Inscrição -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inscrição Voluntário"
            android:textSize="24sp"
            android:textColor="#2E4730"
            android:textStyle="bold"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btnClose"/>

        <!-- Campo Nome Completo -->
        <EditText
            android:id="@+id/etNameVol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Nome Completo"
            android:padding="12dp"
            android:textColor="#2D492D"
            android:textColorHint="#2D492D"
            android:textSize="18sp"
            android:layout_below="@id/tvTitle"
            android:layout_marginTop="30dp"/>

        <!-- Campo Número de Telefone -->
        <EditText
            android:id="@+id/etNumberVol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Telefone"
            android:inputType="phone"
            android:padding="12dp"
            android:textColor="#2D492D"
            android:textColorHint="#2D492D"
            android:textSize="18sp"
            android:layout_below="@id/etNameVol"/>

        <!-- Campo E-mail -->
        <EditText
            android:id="@+id/etEmailVol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edittext"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColor="#2D492D"
            android:textColorHint="#2D492D"
            android:textSize="18sp"
            android:layout_below="@id/etNumberVol"/>



        <!-- Botão Próximo -->
        <Button
            android:id="@+id/btnSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#305932"
            android:padding="12dp"
            android:text="Enviar"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:cornerRadius="10dp"
            app:iconPadding="10dp"
            android:layout_below="@id/etEmailVol"/>


    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
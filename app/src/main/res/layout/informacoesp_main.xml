<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F7F2E7">

        <!-- Botão de Fechar (X) -->
        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_margin="16dp"
            android:src="@drawable/ic_close"
            android:contentDescription="Fechar" />

        <!-- Ícone de Usuário -->
        <ImageView
            android:id="@+id/userIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:src="@drawable/ic_user"
            android:contentDescription="Ícone do Usuário" />

        <!-- Texto Nome Completo -->
        <TextView
            android:id="@+id/labelNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userIcon"
            android:layout_marginTop="24dp"
            android:layout_centerHorizontal="true"
            android:text="Nome completo:"
            android:textColor="#3B5234"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Campo Editável Nome Completo -->
        <EditText
            android:id="@+id/txtNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelNome"
            android:layout_centerHorizontal="true"
            android:enabled="false"
            android:text="**********************"
            android:textColor="#3B5234"
            android:textSize="18sp" />

        <!-- Texto R.G. -->
        <TextView
            android:id="@+id/labelRG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNome"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:text="R.G.:"
            android:textColor="#3B5234"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Campo Editável R.G. -->
        <EditText
            android:id="@+id/txtRG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelRG"
            android:layout_centerHorizontal="true"
            android:enabled="false"
            android:text="**********************"
            android:textColor="#3B5234"
            android:textSize="18sp" />

        <!-- Texto CPF -->
        <TextView
            android:id="@+id/labelCPF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtRG"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:text="C.P.F.:"
            android:textColor="#3B5234"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Campo Editável CPF -->
        <EditText
            android:id="@+id/txtCPF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelCPF"
            android:layout_centerHorizontal="true"
            android:enabled="false"
            android:text="**********************"
            android:textColor="#3B5234"
            android:textSize="18sp" />

        <!-- Texto Endereço -->
        <TextView
            android:id="@+id/labelEndereco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtCPF"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:text="Endereço:"
            android:textColor="#3B5234"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Campo Editável Endereço -->
        <EditText
            android:id="@+id/txtEndereco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelEndereco"
            android:layout_centerHorizontal="true"
            android:enabled="false"
            android:text="**********************"
            android:textColor="#3B5234"
            android:textSize="18sp" />

        <!-- Botão Editar Perfil -->
        <Button
            android:id="@+id/editProfileButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtEndereco"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:text="Editar Perfil"
            android:backgroundTint="#3D5532"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/UserInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editProfileButton"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:text="Informações de Usuário"
            android:backgroundTint="#3D5532"
            android:textColor="@color/white" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
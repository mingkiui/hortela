    <!-- Botão Adicionar -->
    <Button
        android:id="@+id/btnSalvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:textSize="15sp"
        android:backgroundTint="@color/green"
        android:textColor="@android:color/white"
        android:layout_below="@id/txtData"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- Campo de Data (com DatePicker) -->
    <TextView
        android:id="@+id/txtData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/calendario"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:padding="15dp"
        android:text="     Selecione a data da sua disponibilidade apenas \n clicando no dia que você prefere do calendário acima!"
        android:textColor="@color/green"
        android:textSize="14sp"
        tools:ignore="TouchTargetSizeCheck" />

    <!-- Campo de Descrição -->
    <TextView
        android:id="@+id/editDescricao"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColorHint="@color/green"
        android:backgroundTint="@color/green"
        android:textColor="@color/green"
        android:padding="10dp"
        android:textSize="16sp"
        android:gravity="top"
        android:layout_below="@id/btnSalvar"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <TextView

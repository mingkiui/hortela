            <!-- Repetir para outros dias do calendário -->

        </GridLayout>

        <!-- Botão Adicionar -->
        <Button
            android:id="@+id/btnAdicionar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Adicionar"
            android:textSize="18sp"
            android:backgroundTint="@color/green"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/calendario"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintMarginTop="16dp" />

        <!-- Campo de Data (com DatePicker) -->
        <TextView
            android:id="@+id/txtData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecione uma data"
            android:textSize="16sp"
            android:textColor="@color/green"
            android:padding="8dp"
            android:background="@drawable/bg_dia"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toBottomOf="@id/btnAdicionar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Campo de Descrição -->
        <EditText
            android:id="@+id/editDescricao"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:hint="Descrição:"
            android:textColorHint="@color/green"
            android:backgroundTint="@color/green"
            android:textColor="@color/green"
            android:padding="10dp"
            android:gravity="top"
            app:layout_constraintTop_toBottomOf="@id/txtData"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintMarginTop="8dp"
            app:layout_constraintMarginStart="16dp"
            app:layout_constraintMarginEnd="16dp" />


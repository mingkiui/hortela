<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9E6D5"
    android:padding="15dp">

    <!-- Botão de fechar (X) no canto superior esquerdo -->
    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_close"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:padding="8dp"
        android:contentDescription="@string/close_button"/>

    <!-- Título: Registro de usuário -->
    <TextView
        android:id="@+id/tvTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro de usuário"
        android:textColor="#3D5532"
        android:textSize="24sp"
        android:fontFamily="sans-serif-medium"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="40dp"/>

    <!-- Campo de Nome de usuário -->
    <EditText
        android:id="@+id/etUsername1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@id/tvTitle1"
        android:hint="Nome de usuário"
        android:textColorHint="#2D492D"
        android:textColor="#2D492D"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        android:textSize="18sp"/>

    <!-- Campo de Senha -->
    <EditText
        android:id="@+id/etPassword1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@+id/etEmail1"
        android:layout_marginTop="20dp"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textColorHint="#2D492D"
        android:textColor="#2D492D"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        android:textSize="18sp"/>

    <!-- Campo de Repetir Senha -->
    <EditText
        android:id="@+id/etConfirmPass1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@id/etPassword1"
        android:layout_marginTop="20dp"
        android:hint="Repetir senha"
        android:inputType="textPassword"
        android:textColorHint="#2D492D"
        android:textColor="#2D492D"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        android:textSize="18sp"/>

    <!-- Campo de E-mail -->

    <!-- Botão Cadastrar-se -->
    <EditText
        android:id="@+id/etEmail1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etUsername1"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/rounded_edittext"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:textColor="#2D492D"
        android:textColorHint="#2D492D"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etConfirmPass1"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="#305932"
        android:padding="12dp"
        android:text="Cadastrar-se"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:cornerRadius="10dp"
        app:iconPadding="10dp" />
</RelativeLayout>
